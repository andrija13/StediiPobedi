@page
@model IndexModel
@{
    ViewData["Title"] = "Moj profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<link rel="stylesheet" href="~/css/Profil.css">

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <h2 class="naslov">Pregled profila</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Ime"></label>
                <input asp-for="Input.Ime" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Prezime"></label>
                <input asp-for="Input.Prezime" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.StaraLozinka"></label>
                <input asp-for="Input.StaraLozinka" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.NovaLozinka"></label>
                <input asp-for="Input.NovaLozinka" class="form-control" />
            </div>

            <div class="dodaj">
                <button id="update-profile-button" type="submit" class="btn btn-outline-success ml-auto">Sačuvaj 
                    <ion-icon name="save-outline" style="font-size: 18px;vertical-align: -3px;"></ion-icon></button>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}